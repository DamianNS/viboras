@page "/partida/{PartidaId}"
@inject NavigationManager Navigation

<PageTitle>Partida - Víboras</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Partida: @PartidaId</h2>
        <button class="btn btn-outline-secondary" @onclick="VolverAlLobby">
            <i class="bi bi-arrow-left"></i> Volver al Lobby
        </button>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="alert alert-info">
                <h4><i class="bi bi-info-circle"></i> ¡Partida en desarrollo!</h4>
                <p>Esta funcionalidad está siendo desarrollada. Aquí estará el juego de Víboras.</p>
                <p><strong>ID de la partida:</strong> @PartidaId</p>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string PartidaId { get; set; } = "";

    private void VolverAlLobby()
    {
        Navigation.NavigateTo("/lobby");
    }
}